@using Cimon.Auth
@using Cimon.Profile
@inject ContextMenuService ContextMenuService
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<AuthorizeView>
    <Authorized>
        <ProfileComponent />
    </Authorized>
    <NotAuthorized>
        <RadzenMenu aria-label="login-menu">
            <RadzenMenuItem aria-label="show-login-options" Text="Login" Icon="login">
                <RadzenMenuItem Icon="login" Text="Auto" Path="/Login?autologin=true"></RadzenMenuItem>
                <RadzenMenuItem aria-label="login-via-password" Icon="password"
                                Text="Password"
                                Path="/Login"></RadzenMenuItem>
            </RadzenMenuItem>
        </RadzenMenu>
    </NotAuthorized>
</AuthorizeView>

