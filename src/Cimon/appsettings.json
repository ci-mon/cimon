{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/main.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 5,
          "shared": true,
          "flushToDiskInterval": "00:01:00"
        }
      }
    ]
  },
  "DbProvider": "Sqlite",
  "ConnectionStrings": {
    "Sqlite": "Data Source=./db/data.db;",
    "SqlServer": "Data Source=.;Initial Catalog=cimon;Integrated Security=True;TrustServerCertificate=True"
  },
  "Secrets": {
    "Vault": {
      "Url": "",
      "Token": "root",
      "MountPoint": "infrastructure.cimon",
      "Path": "prod"
    },
    "LdapClient": {
      "ConnectionTimeout": "00:00:10",
      "TeamGroups": ["DevTeams"],
      "AdminGroups": ["Admins"]
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Negotiate": {
      "Enabled": true
    }
  }
}
